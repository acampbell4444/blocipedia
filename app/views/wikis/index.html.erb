<br><br><br>
<div class="jumbotron">
  <h2 style="float:left">Public Wikis</h2><br><br>
  <% if current_user %>
  <div style="float:right">
    <div class="btn btn-success btn-xs">
      <span class="glyphicon glyphicon-plus">
        <%= link_to "CreateNew", new_wiki_path,style: "color:white; font-weight:bold" %><br>
      </span>
    </div>
  </div>
  <% end %>
</div>

<div style="padding-left:30px">
  <% @wikis.each do |wiki| %>
    <% if !(wiki.private) %>
      <p style=""><%= link_to wiki.title, wiki %>
      <small>Created by <%= wiki.user.name || wiki.user.email%></small>
      </p>
    <% end %>
  <% end %>
</div>
